<view class="container">
  <text class="time">{{showTime.currentTime}}</text>
  <view class="control">
    <movable-area class="movable-area">
      <movable-view bindchange="onChange" bindtouchend='onTouchEnd' damping="1000" x='{{movableDis}}' class="movable-view" direction="horizontal"></movable-view>
    </movable-area>
    <progress percent="{{progress}}" activeColor="#fff" stroke-width="4" backgroundColor='#969696' />
  </view>
  <text class="time">{{showTime.totalTime}}</text>
</view>