
.container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.bar {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding-left: 60rpx;
}

.search {
    background: #d43c33;
    color: #fff;
    margin-left: 20rpx;
    font-size: 24rpx;
}
button{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.button-sp-area{
  margin: 0 auto;
  width: 60%;
}
.mini-btn{
  margin-right: 10rpx;
}

.in-bar {
  color: #999;
}

.find {
  position: absolute;
  top: 50%;
  transform: translate(16rpx, -40%);
  color: #9f9f9f;
}
